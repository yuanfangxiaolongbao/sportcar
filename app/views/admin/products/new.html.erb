<div class="col-md-12 ">
  <h2>new product</h2>
  <hr>
  <%= simple_form_for [:admin, @product] do |f| %>

    <div class="group">
      <%= f.input :title %>
    </div>

    <div class="group">
      <%= f.input :description %>
    </div>

    <div class="group">
      <%= f.input :quantity %>
    </div>

    <div class="group">
      <%= f.input :price %>
    </div>

    <div class="group">
      <%= f.input :image, as: :file %>
    </div>

    <!--分类项 -->
    <div class="group">
      <%= select_tag(:category_id, options_for_select(@categories), :prompt => "选择类别") %>
    </div>
    <hr>
    <!-- <div class="form-group">
      <%= f.input :title, input_html: { class: "form-control" } %>
      <%= f.input :description, input_html: { class: "form-control" } %>
      <%= f.input :price, input_html: { class: "form-control" } %>
      <%= f.input :quantity, input_html: { class: "form-control" } %>
      <%= f.input :image, as: :file %>
    </div> -->
    <%= f.submit "Create Product", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
  <% end %>
</div>
